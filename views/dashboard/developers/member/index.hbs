<h1>Developer</h1>
<p>
  <div class="row">
    <button class="btn btn-warning pull-right" type="button" data-toggle="collapse" data-target="#developerStoreForm">Show later saved information</button>
  </div>
</p>

<p>
  <div id="developerStoreForm" class="row collapse out">
    {{#if developer.storage}}
      <form action="" method="POST">
        <fieldset class="form-group">
          <legend class="bg-warning">Stored data</legend>
          {{#each developer.storage}}
            <div class="form-group">
              <label class="text-capitalize" for="{{@key}}">{{@key}}</label>
              <input class="form-control" name="{{@key}}" id="{{@key}}" type="text" value="{{this}}">
            </div>
            <!-- {{@key}}: {{this}} -->
          {{/each}}
        </fieldset>
        <button type="button" class="btn btn-warning storage-button">Save to storage</button>
        <button type="button" class="btn btn-success publish-button">Publish</button>
      </form>
    {{/if}}
  </div>
</p>

<div class="row">
  {{#if developer}}
    <form action="" method="POST">
      <fieldset class="form-group">
        <legend class="bg-success">Published information</legend>
        {{#each developer}}
          <div class="form-group">
            <label class="text-capitalize" for="{{@key}}">{{@key}}</label>
            <input class="form-control" name="{{@key}}" id="{{@key}}" type="text" value="{{this}}">
          </div>
          <!-- {{@key}}: {{this}} -->
        {{/each}}
      </fieldset>
      <button type="button" class="btn btn-warning storage-button">Save to storage</button>
      <button type="button" class="btn btn-success publish-button">Publish</button>
    </form>
  {{/if}}
</div>
