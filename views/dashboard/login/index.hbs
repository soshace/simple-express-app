<h1>Login</h1>

<form action="" method="post" class="m-l-10">
  <div class="form-group">
    <input type="text" name="username" placeholder="username" size="40" class="form-control m-l-100">
  </div>
  <div class="form-group">
    <input type="text" name="password" placeholder="password" size="40" class="form-control">
  </div>
  <div class="form-group">
    <input type="submit" value="Login" class="btn btn-default">
  </div>
  <div class="form-group">
    {{#if message}}
      <span>{{{messages}}}</span>
    {{/if}}
  </div>
</form>

{{#unless user}}
  <div>
    <p>
    You are not loggin yet
    </p>
  </div>
{{/unless}}

